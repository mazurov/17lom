%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Making the Title, with definitions for date, abstract etc. %
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\def\@aabuffer{}
\def\author #1{\expandafter\def\expandafter\@aabuffer\expandafter
{\@aabuffer \small\rm      #1\relax \par}}
\def\address#1{\expandafter\def\expandafter\@aabuffer\expandafter
{\@aabuffer \small\it #1\relax \par\vspace{0em}}}

\def\maketitle{
\begin{center}
   {\bf \@title \par}
   \vskip 1em                      % Vertical space after title.
   \@aabuffer\relax
\end{center} \par
\gdef\@aabuffer{}
}

\renewenvironment{abstract}
{\begin{center}
 \begin{minipage}{4.2truein}
                 \footnotesize
                 \parindent=0pt\textit{Abstract.}}{\par \end{minipage}
      \end{center}
      \vskip 1em \par
}

